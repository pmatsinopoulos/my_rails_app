<div class="product-reviews">
  <% @comments.each do |comment| %>
    <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
    <div class="rated" data-score="<%= comment.rating %>"></div>
    <p class="comment-text"><%= comment.body %></p>
    <% if signed_in? && current_user.admin? %>
      <%= link_to 'Delete comment', product_comment_path(@product, comment), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default" %>
    <% end %>
    <hr>
  <% end %>
</div>