<div class="row">
    <div class="col-xs-12 col-sm-6">
        <% if signed_in? %>
            <h4>Add a review:</h4>
            <%= form_for([@product, @product.comments.build]) do |f| %>
              <p>
                <%= f.label :body, "Comments" %><br>
                <%= f.text_area :body %>
              </p>
              <p>
                <%= f.label :rating %><br>
                <%= f.text_field :rating, class: "rating" %>
              </p>  
              <p>
                <%= submit_tag("Add") %>
              </p>
            <% end %>
        <% end %>
    </div>
</div>