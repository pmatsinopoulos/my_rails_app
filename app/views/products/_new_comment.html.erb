<% if signed_in? %>
    <h4>Add a review:</h4>
<%= form_for([@product, @product.comments.build], :class=> "form inline-form") do |f| %>
      <div class="form-area">
        <p>
          <%= f.label :body, "Comments" %><br>
          <%= f.text_area :body %>
        </p>
        <p>
          <div class="rating"></div>
        </p>
        <p>
          <%= submit_tag("Add", :class => "btn btn-default") %>
        </p>
      </div>
    <% end %>
<% end %>
