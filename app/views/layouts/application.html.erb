<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1 user-scalable=no">
  <title>MyRailsApp</title>
  
  <!--Bootstrap CSS-->
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
  
  <!--Google fonts-->
  <link href='http://fonts.googleapis.com/css?family=Niconne' rel='stylesheet' type='text/css'>
  
  <!--App styles-->
  <%= stylesheet_link_tag    'animate', media: 'all', 'data-turbolinks-track' => true %>
  
  <!--App styles-->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <!--jQuery-->
  <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>  
  <!--Bootstrap js-->
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="nav-container">
    <div class="row">
      <div class="col-xs-12">
        <nav class="navbar navbar-default navbar-collapse">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to root_path, :id => "nav-brand", :class => "navbar-brand logo" do %>
                <span class="glyphicon glyphicon-music"></span> 
                <span class="logo-text">Sweet Music</span>
              <% end %>
            </div>
            
            <div class="collapse navbar-collapse text-right" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav right">
                <li><%= link_to "Home", root_path %></li>
                <li><%= link_to "Instruments", :products %></li>
                <li><%= render "shared/search_form" %></li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </div><!--end Container-->
  
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <%= yield %>
      </div>
    </div>
  </div><!--end Container-->

</body>
</html>
